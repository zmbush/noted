#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
COPY="$DIR/copyright.txt.js"

for file in $(git ls-files | grep -e '\.jsx\?$' | grep -v '^flow-typed' | grep -v '^migrations'); do
  if ! grep -q Copyright "$file"; then
    echo "Updating $file"
    cat "$COPY" <(echo) "$file" > "$file.new" && mv "$file.new" "$file"
  fi
done
